<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.cap02">

    <uses-sdk />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cap02"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="fullSensor"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GuideHome"/>
        <activity android:name=".PlasticGuide"/>
        <activity android:name=".CanGuide"/>
        <activity android:name=".PaperGuide"/>
        <activity android:name=".GlassGuide"/>
        <activity android:name=".MetalGuide"/>
        <activity android:name=".StyroGuide"/>
        <activity android:name=".VinylGuide"/>
        <activity android:name=".CameraActivity"/>
        <activity android:name=".ClassifierActivity"/>


    </application>

</manifest>